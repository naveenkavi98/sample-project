<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_event"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_event_title"
                style="@style/txt_medium_normal"
                android:layout_width="match_parent"
                android:paddingHorizontal="5dp"
                tools:text="Are you ready to partner with AAZP for a thrilling summer camp adventure? - 24 to 29 April 2024"
                android:textColor="@color/black"
                android:gravity="top"/>

            <TextView
                android:id="@+id/txt_event_description"
                style="@style/txt_medium_normal"
                android:layout_width="match_parent"
                android:paddingHorizontal="5dp"
                android:layout_weight="1"
                tools:text="Are you ready to partner with AAZP for a thrilling summer camp adventure?"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>